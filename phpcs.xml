<?xml version="1.0"?>
<ruleset name="Cobblestone">
  <description>WordPress Coding Guidelines</description>

  <!-- Scan all files in directory -->
  <file>.</file>

  <!-- Scan only PHP files -->
  <arg name="extensions" value="php"/>

  <!-- Ignore WordPress and Composer dependencies -->
  <exclude-pattern>public/wp</exclude-pattern>
  <exclude-pattern>vendor/</exclude-pattern>
  <exclude-pattern>public/app/plugins/</exclude-pattern>
  <exclude-pattern>public/app/themes/</exclude-pattern>
  <include-pattern>public/app/themes/obsidian/</include-pattern>
  <include-pattern>src/</include-pattern>

  <!-- Show colors in console -->
  <arg value="-colors"/>

  <!-- Show sniff codes in all reports -->
  <arg value="ns"/>

  <!-- Use WordPress as a base -->
  <rule ref="WordPress-Core">
		<exclude name="Generic.WhiteSpace.ScopeIndent.IncorrectExact" />
		<exclude name="Generic.WhiteSpace.ScopeIndent.Incorrect" />
		<exclude name="PEAR.Functions.FunctionCallSignature.Indent" />
		<exclude name="WordPress.Files.FileName.NotHyphenatedLowercase" />
		<exclude name="WordPress.Arrays.ArrayDeclarationSpacing.AssociativeKeyFound" />
		<exclude name="WordPress.Files.FileName.InvalidClassFileName" />
		<exclude name="Generic.Formatting.MultipleStatementAlignment.NotSameWarning" />
	</rule>
</ruleset>